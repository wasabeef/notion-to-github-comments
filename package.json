{
  "name": "notion-to-github-comments",
  "version": "1.2.0",
  "description": "GitHub Action: Notion to GitHub Comments",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "bun run build",
    "build": "ncc build src/index.ts -o dist",
    "build:check": "bun run build && echo 'üì¶ Build completed. Check dist/ folder:' && ls -la dist/",
    "build:dev": "bun run build && git add dist/ && echo 'üîç Build changes:' && git diff --cached --stat",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "github-actions",
    "notion",
    "pull-request",
    "ai",
    "context"
  ],
  "author": {
    "name": "Daichi Furiya",
